mixin get-in-touch()
  .getInTouch.container
    .getInTouch__wrapper.containerFooter
      img.getInTouch__image(src="./assets/img/contact-image.png" alt="town")
      //- title
      .getInTouch__border
      h1.getInTouch__title GET IN TOUCH 
      //- content
      .getInTouch__content 
        //- contact block
        .getInTouch__contacts 
          .getInTouch__adress 
            i.fa-solid.fa-location-dot
            span.getInTouch__text 91 Nolan Extension Suite 670
          .getInTouch__phone 
            i.fa-solid.fa-phone
            span.getInTouch__text +001 356-868-2454 
          .getInTouch__email
            i.fa-solid.fa-inbox
            span.getInTouch__text montichello@servise.com
          .getInTouch__schedule 
            i.fa-solid.fa-clock
            span.getInTouch__text From 07:00AM to 19:30PM
        //- form registration block
        .getInTouch__registration 
          form#js-form-registration.form(method="post") 
            .form__wrapper
              label.form__label
                input#js-form-registration-user-name.form__input(name="userName" type="text" placeholder="Name")  
              label.form__label
                input#js-form-registration-user-email.form__input(name="userEmail" type="email" placeholder="Email")
              //-submit button 
              br
              button.form__button(type="submit")
                span.form__button__text SUBMIT



